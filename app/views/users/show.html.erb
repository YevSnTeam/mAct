<% provide(:title, @user.fullname) %>

<h1>
	<%= @user.fullname%>
</h1>

<h2>Friends</h2>
<ul>
  <% @user.friendships.each do |friendship| %>
  <li>
  	<%= link_to friendship.friend.fullname, friendship.friend %>
  	<% if current_user == @user %>
  		<%= link_to "Entfernen", friendship, :method => :delete, :confirm  => "Willst du wirklich #{friendship.friend.fullname} aus deiner Freundeliste entfernen?" %>
  	<% end %>
  </li>
  
  <% end %>  
</ul>
<p><%= link_to "Usersliste", users_path %></p>